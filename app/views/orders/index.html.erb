<h1>Orders</h1>

<%= link_to 'Create a new order', new_order_path %>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>User ID</th>
      <th>Status</th>
      <th>Order Type</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.id %></td>
        <td><%= order.price %></td>
        <td><%= order.quantity %></td>
        <td><%= order.user_id %></td>
        <td><%= order.status %></td>
        <td><%= order.order_type %></td>
        <td><%= button_to 'Process', process_ord_order_path(order), method: :patch %></td>
      </tr>
    <% end %>
  </tbody>
</table>
